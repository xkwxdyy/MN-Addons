        // å¾…å¤„ç†ä»»åŠ¡æ‹–æ‹½æ‚¬åœ
        function handlePendingDragOver(event) {
            event.preventDefault();
            event.dataTransfer.dropEffect = 'move';
            
            if (event.target === draggedPendingElement) return;
            
            const taskItem = event.target.closest('.pending-task-item');

        // æ ¼å¼åŒ–æ—¥æœŸ
        function formatDate(dateStr) {
            const date = new Date(dateStr);
            const today = new Date();
            const diffDays = Math.floor((date - today) / (1000 * 60 * 60 * 24));
            
            if (diffDays === 0) return 'ä»Šå¤©';
            if (diffDays === 1) return 'æ˜å¤©';
            if (diffDays === -1) return 'æ˜¨å¤©';
            if (diffDays > 0 && diffDays <= 7) return `${diffDays}å¤©å`;
            if (diffDays < 0) return `é€¾æœŸ${-diffDays}å¤©`;
            
            return date.toLocaleDateString('zh-CN');
        }
        
        // æ ¼å¼åŒ–ç»è¿‡æ—¶é—´
        function formatElapsedTime(startTime, endTime) {
            if (!startTime) return '';
            
            const start = new Date(startTime);
            const end = endTime ? new Date(endTime) : new Date();
            const diff = Math.floor((end - start) / 1000); // ç§’æ•°
            
            if (diff < 60) return `${diff}ç§’`;
            if (diff < 3600) return `${Math.floor(diff / 60)}åˆ†é’Ÿ`;
            if (diff < 86400) {
                const hours = Math.floor(diff / 3600);
                const minutes = Math.floor((diff % 3600) / 60);
                return minutes > 0 ? `${hours}å°æ—¶${minutes}åˆ†é’Ÿ` : `${hours}å°æ—¶`;
            }
            
            const days = Math.floor(diff / 86400);
            const hours = Math.floor((diff % 86400) / 3600);
            return hours > 0 ? `${days}å¤©${hours}å°æ—¶` : `${days}å¤©`;
        }
        
        // æ ¼å¼åŒ–è¿›å±•æ—¶é—´
        function formatProgressTime(dateStr) {
            if (!dateStr) return '';
            
            const date = new Date(dateStr);
            const now = new Date();
            const diff = Math.floor((now - date) / 1000); // ç§’æ•°
            
            // å°äº1åˆ†é’Ÿ
            if (diff < 60) return 'åˆšåˆš';
            
            // å°äº1å°æ—¶
            if (diff < 3600) return `${Math.floor(diff / 60)}åˆ†é’Ÿå‰`;
            
            // å°äº24å°æ—¶
            if (diff < 86400) {
                const hours = Math.floor(diff / 3600);
                return `${hours}å°æ—¶å‰`;
            }
            
            // å°äº7å¤©
            if (diff < 604800) {
                const days = Math.floor(diff / 86400);
                if (days === 1) return 'æ˜¨å¤© ' + date.toLocaleTimeString('zh-CN', { hour: '2-digit', minute: '2-digit' });
                if (days === 2) return 'å‰å¤© ' + date.toLocaleTimeString('zh-CN', { hour: '2-digit', minute: '2-digit' });
                return `${days}å¤©å‰`;
            }
            
            // è¶…è¿‡7å¤©ï¼Œæ˜¾ç¤ºå…·ä½“æ—¥æœŸ
            return date.toLocaleDateString('zh-CN', { 
                month: 'numeric', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }


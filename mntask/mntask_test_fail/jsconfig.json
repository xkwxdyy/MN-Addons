{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["ES2015", "ES2017", "ES2019", "ES2020"],
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": [
    "main_*.js",
    "taskController.js",
    "taskModel.js",
    "utils.js",
    "*.html"
  ],
  "exclude": [
    "node_modules",
    "*.mnaddon"
  ]
}
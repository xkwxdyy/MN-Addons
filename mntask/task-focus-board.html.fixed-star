        // æ„å»ºä»»åŠ¡å±‚çº§ç»“æ„
        function buildTaskHierarchy() {
            const hierarchy = [];
            
            // ä½¿ç”¨ç­›é€‰åçš„ä»»åŠ¡æˆ–æ‰€æœ‰ä»»åŠ¡
            const tasksToUse = hasActiveFilters() ? filteredTasks : tasks;
            
            // é¦–å…ˆè·å–æ‰€æœ‰ç›®æ ‡
            const goals = tasksToUse.filter(t => t.type === 'ç›®æ ‡');
            
            goals.forEach(goal => {
                const goalNode = {
                    task: goal,
                    children: []
                };
                
                // è·å–è¯¥ç›®æ ‡ä¸‹çš„å…³é”®ç»“æœ
                const krs = tasksToUse.filter(t => 
                    t.type === 'å…³é”®ç»“æœ' && 
                    t.path && t.path.includes(goal.title)
                );
                
                krs.forEach(kr => {
                    const krNode = {
                        task: kr,
                        children: []
                    };
                    
                    // è·å–è¯¥å…³é”®ç»“æœä¸‹çš„é¡¹ç›®
                    const projects = tasksToUse.filter(t => 
                        t.type === 'é¡¹ç›®' && 
                        t.path && t.path.includes(kr.title)
                    );
                    
                    projects.forEach(project => {
                        const projectNode = {
                            task: project,
                            children: []
                        };
                        
                        // è·å–è¯¥é¡¹ç›®ä¸‹çš„åŠ¨ä½œ
                        const actions = tasksToUse.filter(t => 
                            t.type === 'åŠ¨ä½œ' && 
                            t.path && t.path.includes(project.title)
                        );
                        
                        actions.forEach(action => {
                            projectNode.children.push({
                                task: action,
                                children: []
                            });
                        });
                        
                        krNode.children.push(projectNode);
                    });
                    
                    goalNode.children.push(krNode);
                });
                
                hierarchy.push(goalNode);
            });
            
            return hierarchy;
        }
        

            } else if (oldStatus === 'æš‚åœ' && newStatus === 'è¿›è¡Œä¸­') {
                // ä»æš‚åœæ¢å¤ï¼Œæ›´æ–°æ—¥æœŸä¸ºä»Šå¤©
                task.fields.plannedDate = today;
                task.fields.today = true;
                // å¦‚æœä¹‹å‰æ²¡æœ‰å¼€å§‹æ—¶é—´ï¼Œè®°å½•æ–°çš„å¼€å§‹æ—¶é—´
                if (!task.fields.startTime) {
                    task.fields.startTime = currentTime;
                }
            } else if (oldStatus === 'è¿›è¡Œä¸­' && newStatus === 'å·²å®Œæˆ') {
                // ä»»åŠ¡å®Œæˆï¼Œè®°å½•ç»“æŸæ—¶é—´
                task.fields.endTime = currentTime;

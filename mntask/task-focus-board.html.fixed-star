            const windowWidth = window.innerWidth;
            
            // å¦‚æœçª—å£å®½åº¦å¤§äº960pxï¼Œç¡®ä¿ä¾§è¾¹æ æ¢å¤æ­£å¸¸çŠ¶æ€
            if (windowWidth > 960) {

# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Git files
[.git*]
indent_size = 2
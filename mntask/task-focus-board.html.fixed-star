        function handlePendingDragLeave(event) {
            // å¦‚æœç¦»å¼€çš„æ˜¯å½“å‰å®¹å™¨ï¼Œæ¸…é™¤æŒ‡ç¤ºå™¨
            if (!event.relatedTarget || !event.currentTarget.contains(event.relatedTarget)) {

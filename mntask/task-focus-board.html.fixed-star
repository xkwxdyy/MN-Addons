        // æ¸²æŸ“æ ‘å½¢æ¨¡å¼
        function renderBoardTree() {
            const container = document.getElementById('boardContainer');
            
            // æ„å»ºä»»åŠ¡å±‚çº§ç»“æ„
            const taskHierarchy = buildTaskHierarchy();
            
            container.innerHTML = `

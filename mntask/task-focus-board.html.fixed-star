                        showNotification('å¯åŠ¨é“¾æ¥å·²æ›´æ–°', 'success');
                    } else {
                        element.innerHTML = element._originalContent;
                    }
                    break;
            }

            element.classList.remove('field-editing');
            
            // ä¿å­˜åˆ°æœ¬åœ°å­˜å‚¨
